@model IEnumerable<BlogPost>

<div class="container-fluid">
    <div class="row">
        <table class="table table-striped">
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Publish Date</th>
                <th></th>
            </tr>
            @foreach(BlogPost post in Model)
            {
                <tr>
                    <td>@post.Title</td>
                    <td>@post.Author</td>
                    <td>@post.ReleaseDate.ToString("yyyy.MM.dd")</td>
                    <!-- <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@post.Id">Edit</a>
                    </td> -->
                    <td>
                        <form method="POST" asp-action="Remove">
                            <input type="hidden" name="id" value="@post.Id">
                            <input class="btn btn-danger" type="submit" value="Remove">
                        </form>
                    </td>
                </tr>
            }
        </table>
    </div>
    @if(Model.Count() == 0)
        {
            <div class="row">
                <h1>No BlogPosts</h1>
            </div>
        }
    <div class="row">
        <a asp-action="Add">Add Post</a>
    </div>
</div>