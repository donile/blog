@model BlogPost

<div class="container">
    <div>
        <form method="POST" asp-action="Add">
            <div>
                <label asp-for="Title">Title</label>
                <input asp-for="Title" type="text" />
            </div>
            <div>
                <label asp-for="WrittenDate">Written Date</label>
                <input asp-for="WrittenDate" type="date" />
            </div>
            <div>
                <label asp-for="ReleaseDate">Publish Date</label>
                <input asp-for="ReleaseDate" type="date" />
            </div>
            <div>
                <label asp-for="Author">Author</label>
                <input asp-for="Author" type="text" />
            </div>
            <div>
                <label asp-for="Post">Post</label>
                <input asp-for="Post" type="text" />
            </div>
            <div>
                <input type="submit" value="Add Post" />
            </div>
        </form>
    </div>
</div>